<div id="podcast_show">
    <div id="show_banner">
        <div class="wrapper_skinny">
            <h1><%= @user.title %></h1>
            <p class="description"><%= @user.description %></p>
            <% unless @user.itunes.blank? %>
                <a href="<%= @user.itunes %>" class="subscribe_link">Itunes</a>
            <% end %>
            <% unless @user.stitcher.blank? %>
                <a href="<%= @user.stitcher %>" class="subscribe_link">Stitcher</a>
            <% end %>
            <% unless @user.podbay.blank? %>
                <a href="<%= @user.podbay %>" class="subscribe_link">Podbay</a>
            <% end %>
        </div>
    </div>
    <div id="breadcrumb">
        <%= link_to users_path do %>
            All Podcasts
            <span>/</span>
            The Rocketship Podcast
        <% end %>
    </div>
    <div id="episodes">
        <div class="wrapper_skinny">
            <ul class="cf">
                <% @episodes.each do |episode| %>
                    <li class="cf">
                        <div class="episode_thumbnail">
                            <a href="#">
                                <%= image_tag episode.episode_thumbnail.url(:medium) %>
                            </a>
                        </div>
                        <div class="episode_overview">
                            <h2>
                                <%= link_to episode.title, user_episode_path(@user, episode) %>
                            </h2>
                            <p class="description">
                                <%= truncate(episode.description, length: 120) %>
                            </p>
                        </div>
                    </li>
                <% end %>
            </ul>
        </div>
    </div>
</div>