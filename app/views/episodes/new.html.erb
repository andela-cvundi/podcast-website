<div id="podcast_show">
    <div id="show_banner">
        <div class="wrapper_skinny">
            <h1>The rocketship podcast Dashboard</h1>
        </div>
    </div>


    <div id="links">
        <div class="wrapper_skinny">
            <ul>
                <li><%= link_to "Episodes", root_path %></li>
                <li><%= link_to "New Episode", new_user_episode_path(@user, @episode), class: "current" %></li>
                <li><%= link_to "Account Settings", edit_user_registration_path %></li>
                <li><%= link_to "View Podcast", user_path(current_user) %></li>
            </ul>
        </div>
    </div>
    
    
    <div id="form">
        <div class="wrapper_skinny">
            <%= form_for ([@user, @episode]) do |f| %>
            
                <div class="field">
                    <%= f.label :title %><br />
                    <%= f.text_field :title, autofocus: true %>
                </div>
                
                <div class="field">
                    <%= f.label :description %> <br>
                    <%= f.text_area :description %>
                </div>
                <div class="actions">
                    <%= f.submit class: "button button_highlight button_block" %>
                </div>
                
            <% end %>
        </div>
    
</div>


